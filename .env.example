# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_CHAT_IDS=123456789,987654321

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Transcriber Settings (gemini-2.5-flash)
TRANSCRIBER_MODEL=gemini-2.5-flash
TRANSCRIBER_TEMPERATURE=1.0
TRANSCRIBER_THINKING_LEVEL=low

# Editor Settings (gemini-2.5-pro)
EDITOR_MODEL=gemini-2.5-pro
EDITOR_TEMPERATURE=1.0
EDITOR_THINKING_LEVEL=high

# Application Settings
TEMP_DIR=/tmp/omni_transcriber
LOG_LEVEL=INFO

# Rclone Upload (optional)
# If set, transcripts will be uploaded to this path after completion
# Only chat IDs in RCLONE_ENABLED_CHAT_IDS will have this feature
RCLONE_UPLOAD_PATH=dropbox:/Obsidian/Transcripts
RCLONE_ENABLED_CHAT_IDS=123456789
